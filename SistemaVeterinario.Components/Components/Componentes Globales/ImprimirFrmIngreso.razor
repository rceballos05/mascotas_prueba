<div class="invoice-container" id="FrmIngreso">
    <div class="header">
        <div class="logo-section">
            <div class="logo">
                <div class="logo-shape shape-1"></div>
                <div class="logo-shape shape-2"></div>
                <div class="logo-shape shape-3"></div>
                <div class="logo-shape shape-4"></div>
            </div>
            <div class="company-info">
                <h1>@MaeEmpresasDatos.RazonSocial</h1>
                <div class="contact-info">
                    <div>Fono: @MaeEmpresasDatos.Fono</div>
                    <div>Web: @MaeEmpresasDatos.Sitioweb</div>
                    <div>E-mail: @MaeEmpresasDatos.Email</div>
                </div>
            </div>
        </div>
        <div class="invoice-type">
            <h2>
               Formulario de Ingreso
            </h2>
            <div class="invoice-details">

                <div>FECHA: @DateTime.Now.ToString("dd-MM-yyyy")</div>
            </div>
        </div>
    </div>

    <div class="form-section">
        <div class="row">
            <div class="col-md-4">
                <div class="paw-container">
                    @if (urlFoto is null)
                    {
                        <img src="../assets/images/wila.jpeg" asp-append-version="true" width="250" height="250" class="mt-2" />
                    }
                    else
                    {
                        <img src="@urlFoto" asp-append-version="true" width="200" height="200" class="mt-2" />
                    }
                </div>
            </div>
            <div class="col-md-8">
                <table class="info-table">
                    <tr>
                        <td>Ficha Nº @Mascota.IdMascota</td>
                        <td colspan="2">@Mascota.NombreMascota</td>
                    </tr>
                    <tr>
                        <td>Especie</td>
                        <td colspan="2">@Mascota.Especie, @Mascota.Raza, BLANCO.</td>
                    </tr>
                    <tr>
                        <td>Sexo</td>
                        <td colspan="2">@Mascota.Sexo</td>
                    </tr>
                    <tr>
                        <td>Fech.Naci</td>
                        <td colspan="2">@Mascota.FechaNacimiento.ToString("dd-MM-yyyy")</td>
                    </tr>
                    <tr>
                        <td>Rut Propietario</td>
                        <td colspan="2">@rutFn.FormatoRut(Propietario.Rut)</td>
                    </tr>
                    <tr>
                        <td>Nombre</td>
                        <td colspan="2">@Propietario.Nombre</td>
                    </tr>
                    <tr>
                        <td>Dirección</td>
                        <td colspan="2">@Propietario.Direccion,.</td>
                    </tr>
                    <tr>
                        <td>Fono</td>
                        <td colspan="2">@Propietario.Fono</td>
                    </tr>
                    
                </table>
            </div>

        </div>
        
    </div>

    <div class="form-container">
        <h1>Ficha de Ingreso</h1>

        <div class="field">
            <span class="label">ASUNTO :</span>
            <span class="line"></span>
        </div>

        <div class="field">
            <span class="label">PESO :</span>
            <span class="line-small"></span>
        </div>

        <h2>Pertenencias Registradas</h2>

       
                <table class="pertenencias mt-2">
                    <thead>
                        <tr>
                            <th >Cantidad</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td></td><td></td></tr>
                        <tr><td></td><td></td></tr>
                        <tr><td></td><td></td></tr>
                        <tr><td></td><td></td></tr>
                        <tr><td></td><td></td></tr>
                        <tr><td></td><td></td></tr>
                        <tr><td></td><td></td></tr>
                    </tbody>
                </table>
    </div>
       



</div>
@code {
    [Parameter]
    public Propietario Propietario { get; set; }

    [Parameter]
    public MascotasDto Mascota { get; set; }
    private string urlFoto = "";
    private MedMascotaFotos MascotaFotos = new();
    [Parameter]
    public MaeEmpresasDatos MaeEmpresasDatos { get; set; }
    Rut rutFn = new();
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("printHtmlComponent", "FrmIngreso");
        }
    }
    protected override async Task OnInitializedAsync()
    {
        urlFoto = $"{http.BaseAddress}api/imagenes/base/base/base/base_perfil.png";
        if (!string.IsNullOrEmpty(Mascota.IdFotoPerfil))
        {
            MascotaFotos = await mascotasFotosRepository.GetFotoMascota(userLoged.Token,empresaData.Prefijo, (string)Mascota.IdFotoPerfil);
            if(MascotaFotos.Url is not null)
            {
                urlFoto = $"{http.BaseAddress}api/imagenes/test/{Mascota.RutCliente}/{Mascota.IdMascota}/{MascotaFotos.Url}";
            }
            
            StateHasChanged();
        }
        
    }
}