<style>
    body {
        background-color: #f0f0f0;
        font-family: Arial, sans-serif;
        font-size: 14px;
    }

    .window-container {
        border: 1px solid #999;
        border-radius: 3px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        background-color: #f0f0f0;
        max-width: 500px;
        margin: 20px auto;
    }

    .window-header {
        background: linear-gradient(to bottom, #e6e6e6, #cccccc);
        border-bottom: 1px solid #999;
        padding: 5px 10px;
        display: flex;
        align-items: center;
    }

    .window-title {
        font-weight: bold;
        color: #333;
        margin-left: 5px;
    }

    .window-controls {
        margin-left: auto;
    }

    .window-button {
        background: linear-gradient(to bottom, #f5f5f5, #e6e6e6);
        border: 1px solid #999;
        width: 24px;
        height: 24px;
        font-size: 12px;
        margin-left: 2px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .form-section {
        background-color: white;
        border: 1px solid #ddd;
        padding: 15px;
        margin-bottom: 10px;
    }

    .form-control {
        height: 30px;
        padding: 2px 8px;
        font-size: 13px;
    }

    .form-label {
        font-size: 13px;
        margin-bottom: 5px;
    }

    .section-header {
        color: #333;
        padding: 5px 10px;
        font-weight: bold;
        font-size: 14px;
        margin-bottom: 10px;
        border-bottom: 1px solid #ddd;
    }

    .btn-custom {
        width: 100%;
        text-align: center;
        padding: 5px;
        font-size: 13px;
        border-radius: 3px;
    }

    .btn-save {
        background-color: white;
        border: 1px solid #8BC34A;
        color: #333;
    }

        .btn-save:hover {
            background-color: #f0f8e8;
        }

    .btn-exit {
        background-color: white;
        border: 1px solid #ddd;
        color: #333;
    }

        .btn-exit:hover {
            background-color: #f5f5f5;
        }

    .footer-line {
        height: 5px;
        background-color: #8BC34A;
        margin-top: 20px;
    }

    .readonly-field {
        background-color: #e8f4f8;
    }
</style>

<div class="page-content mt-5 ml-3">
    <!-- Window Header -->
    <div class="window-header">
        <i class="bi bi-key text-warning"></i>
        <span class="window-title">Cambiar Password</span>
        
    </div>

    <div class="container-fluid p-3">
        <!-- Form Section -->
        <div class="form-section">
            <div class="section-header">Datos del Usuario</div>

            <div class="mb-3">
                <label for="usuario" class="form-label">Usuario</label>
                <input type="text" class="form-control readonly-field" id="usuario" value="EDUVERGARA" readonly>
            </div>

            <div class="mb-3">
                <label for="passwordAnterior" class="form-label">Contraseña Anterior</label>
                <input type="password" class="form-control" id="passwordAnterior">
            </div>

            <div class="mb-3">
                <label for="nuevaPassword" class="form-label">Nueva Contraseña</label>
                <input type="password" class="form-control" id="nuevaPassword">
            </div>
        </div>

        <!-- Buttons -->
        <div class="row g-2 mt-3">
            <div class="col-6">
                <button class="btn btn-custom btn-save" id="btnGuardar">Guardar</button>
            </div>
            <div class="col-6">
                <button class="btn btn-custom btn-exit" id="btnSalir">Salir</button>
            </div>
        </div>

        <!-- Footer Line -->
        <div class="footer-line"></div>
    </div>
</div>