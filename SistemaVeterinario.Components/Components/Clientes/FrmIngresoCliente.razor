<div class="page-content mt-5 ml-3">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="form-container">
                <h2 class="mb-4">Mantenedor de Propietarios</h2>
                <form>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="rut" class="form-label">Rut</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="rut">
                                <span class="input-group-text">K</span>
                            </div>
                        </div>
                        <div class="col-md-6 d-flex align-items-center justify-content-end">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="activo">
                                <label class="form-check-label" for="activo">Activo</label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre">
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label for="direccion" class="form-label">Dirección</label>
                            <input type="text" class="form-control" id="direccion">
                        </div>
                        <div class="col-md-4">
                            <label for="comuna" class="form-label">Comuna</label>
                            <select class="form-select" id="comuna">
                                <option selected>Seleccionar...</option>
                                <option value="1">Santiago</option>
                                <option value="2">Providencia</option>
                                <option value="3">Las Condes</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label for="fono1" class="form-label">Fono 1</label>
                            <input type="tel" class="form-control" id="fono1">
                        </div>
                        <div class="col-md-4">
                            <label for="fono2" class="form-label">Fono 2</label>
                            <input type="tel" class="form-control" id="fono2">
                        </div>
                        <div class="col-md-4">
                            <label for="fono3" class="form-label">Fono 3</label>
                            <input type="tel" class="form-control" id="fono3">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email">
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="entidadProtectora">
                                <label class="form-check-label" for="entidadProtectora">
                                    Entidad Protectora
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6 d-flex align-items-center justify-content-end">
                            <label for="descuento" class="form-label me-2">Descuento %</label>
                            <input type="number" class="form-control" id="descuento" style="width: 80px;" value="0">
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="button" class="btn btn-outline-primary">Modificar</button>
                        <button type="button" class="btn btn-danger">Eliminar Registro</button>
                        <button type="button" class="btn btn-secondary">Limpiar Formulario</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
