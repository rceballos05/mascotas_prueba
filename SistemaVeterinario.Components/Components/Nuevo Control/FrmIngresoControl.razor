<div class="container">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Datos del Control</h5>
        </div>
        <div class="card-body">
            <form>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label class="form-label w-100">N° Consulta</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label w-100">N° Control</label>
                        <input type="text" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label w-100">Mascota</label>
                    <input type="text" class="form-control">
                </div>

                <div class="form-group">
                    <label class="form-label w-100">Fecha Control</label>
                    <input type="date" class="form-control" value="2024-12-12">
                </div>

                <div class="form-group">
                    <label class="form-label w-100">Lugar Control</label>
                    <select class="form-select">
                        <option>Seleccione lugar de control</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label w-100">Motivo del Control</label>
                    <textarea class="form-control" rows="3"></textarea>
                </div>

                <div class="form-group">
                    <label class="form-label w-100">Status</label>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="statusSwitch">
                        <label class="form-check-label" for="statusSwitch">Activo</label>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label w-100">Observaciones</label>
                    <textarea class="form-control" rows="4"></textarea>
                </div>

                <div class="form-group">
                    <label class="form-label w-100">Profesional</label>
                    <select class="form-select">
                        <option>Seleccione profesional</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label w-100">Fecha Cierre</label>
                    <input type="date" class="form-control">
                </div>

                <div class="btn-group w-100">
                    <button type="button" class="btn btn-primary">
                        <i class="bi bi-save"></i> Grabar Datos
                    </button>
                    <button type="button" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar Registro
                    </button>
                    <button type="button" class="btn btn-secondary">
                        <i class="bi bi-question-circle"></i> Acceso
                    </button>
                    <button type="button" class="btn btn-info">
                        <i class="bi bi-arrow-left"></i> Volver
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div class="text-muted mt-2">
        CLINICA VETERINARIA ARAUCANIA / Usuario: EDAVERGARA
    </div>
</div>