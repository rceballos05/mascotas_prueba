        border-bottom: 1px solid #999;
        padding: 5px 10px;
        display: flex;
        align-items: center;
    }

    .window-title {
        font-weight: bold;
        color: #333;
        margin-left: 5px;
    }

    .window-controls {
        margin-left: auto;
    }

    .window-button {
        background: linear-gradient(to bottom, #f5f5f5, #e6e6e6);
