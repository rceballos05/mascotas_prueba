        width: 24px;
        height: 24px;
        font-size: 12px;
        margin-left: 2px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .form-section {
        background-color: white;
        border: 1px solid #ddd;
        padding: 15px;
        margin-bottom: 10px;
    }

    .form-control {
        height: 30px;
        padding: 2px 8px;
        font-size: 13px;
        background-color: #f0f0f0;
    }

    .form-select {
        height: 30px;
        padding: 2px 8px;
        font-size: 13px;
    }

    .form-label {
        background-color: #87CEEB;
        color: black;
        padding: 5px 10px;
        margin-bottom: 0;
        font-size: 13px;
        display: block;
        height: 100%;
    }

    .section-header {
        color: #800000;
        padding: 5px 10px;
        font-weight: bold;
        font-size: 14px;
        margin-bottom: 10px;
        border-bottom: 1px solid #87CEEB;
    }

    .action-button {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        padding: 8px;
        width: 100%;
        text-align: left;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
    }

        .action-button i {
            margin-right: 10px;
            font-size: 20px;
            color: #007bff;
        }

    .dropdown-toggle::after {
        position: absolute;
        right: 10px;
        top: 45%;
    }

    .input-with-dropdown {
        position: relative;
    }

        .input-with-dropdown .form-select {
            padding-right: 25px;
        }

    .footer-info {
        font-size: 12px;
        color: #0066cc;
        padding: 5px;
        border-top: 1px solid #ddd;
    }

    .table th {
        background-color: #87CEEB;
        font-weight: normal;
        text-align: center;
        border: 1px solid #ddd;
        color: black;
    }

    .table td {
        border: 1px solid #ddd;
    }

    .table-container {
        background-color: white;
        border: 1px solid #ddd;
        height: 150px;
        overflow-y: auto;
    }

    .description-textarea {
        height: 80px;
        resize: none;
        background-color: #f0f0f0;
    }

    .toggle-switch {
        position: relative;
        display: inline-block;
        width: 50px;
        height: 24px;
    }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .toggle-slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
        border-radius: 24px;
    }

        .toggle-slider:before {
            position: absolute;
            content: "";
            height: 16px;
            width: 16px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

    input:checked + .toggle-slider {
        background-color: #2196F3;
    }

        input:checked + .toggle-slider:before {
            transform: translateX(26px);
        }

    .btn-action {
        border: 1px solid #ddd;
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 5px;
        height: 50px;
    }

    .btn-save {
        background-color: #f8f9fa;
    }

        .btn-save i {
            color: #0066cc;
            font-size: 20px;
            margin-right: 5px;
        }

    .btn-cancel {
        background-color: #dc3545;
        color: white;
    }

        .btn-cancel i {
            color: white;
            font-size: 20px;
            margin-right: 5px;
        }

    .btn-clear {
        background-color: #f8f9fa;
    }

        .btn-clear i {
            color: #28a745;
            font-size: 20px;
            margin-right: 5px;
        }

    .footer-text {
        font-size: 12px;
        color: #666;
        padding: 5px;
    }
</style>

